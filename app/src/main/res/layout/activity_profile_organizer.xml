<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    android:gravity="center">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/organizer"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/profile_organizer_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/profile_organizer_post_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PUBLICAR"
        android:onClick="makePost"/>

    <Button
        android:id="@+id/profile_organizer_follow_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEGUIR"
        android:onClick="followPlayer"/>

</LinearLayout>